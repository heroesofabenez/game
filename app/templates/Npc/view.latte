{layout '../@layout.latte'}
{block title}NPC{/block}
{block content}
  <h1>{$name}</h1>
  <p>You stepped in front of {$name}. {$description}</p>
  <p>What do you want to do?<br>
    <a n:href="Npc:talk $id">Talk</a><br>
    {if $type == "quest"}<a n:href="Npc:quests $id">Ask for quests</a><br>{/if}
    {if $type == "shop"}<a n:href="Npc:trade $id">Trade</a><br>{/if}
    {if $type == "enemy"}Fight<br>{/if}
    <a n:href="Homepage:default">Walk away</a>
  </p>
{/block}