{layout "../@layout.latte"}
{block title}{_"texts.skill.title"}{/block}
{block content}
  <h1>{_"texts.skill.title"} {$skill->name}</h1>
  <p>{_"texts.skill.attackSkill"}</p>
  <p>{$skill->description}</p>
  <p>{_"texts.skill.requires"}: {_"texts.skill.level"} <span class="{if $level >= $skill->neededLevel}green{else}red{/if}">{$skill->neededLevel}</span>, {_"texts.skill.class"} <span class="{if $class === $skill->neededClass->id}green{else}red{/if}">{$skill->neededClass->name}</span>{if $skill->neededSpecialization}, {_"texts.skill.specialization"} <span class="{if $specialization >= $skill->neededSpecialization->id}green{else}red{/if}">{$skill->neededSpecialization->name}</span>{/if}</p>
  <p>{_"texts.skill.skillDamage", 0, ["baseDamage" => $skill->baseDamage, "damageGrowth" => $skill->damageGrowth]}<br>
  {_"texts.skill.skillLevels", $skill->levels}<br>
  {_"texts.skill.target$skill->target"}<br>
  {_"texts.skill.skillStrikes", $skill->strikes}
  {if $skill->hitRate}<br>{_"texts.skill.hitRate", $skill->hitRate}{/if}
  </p>
{/block}