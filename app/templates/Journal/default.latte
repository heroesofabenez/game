{layout "../@layout.latte"}
{block title}{_texts.journal.title}{/block}
{block content}
  <h1>{_texts.journal.journalOf} {$name}</h1>
  <p>{$gender} {_races.$race.name} {_classes.$occupation.name}{$specialization}</p>
  <p>{_texts.journal.level} {$level}, {_texts.journal.experiences, $experiences}</p>
  <p>{_texts.journal.guild}<br>{if $guild}{_guildranks.$guildRank.name|firstUpper} {_texts.journal.ofGuild} {$guild}{else}{_texts.journal.notInGuild}{/if}</p>
  <p>{_texts.journal.karma}<br>{_texts.journal.white} {$whiteKarma}, {_texts.journal.neutral} {$neutralKarma}, {_texts.journal.dark} {$darkKarma}</p>
  <p>{_texts.journal.position}<br>{$stageName} {_texts.journal.at} {$areaName}</p>
  <p>{_texts.profile.moreInfo}<br>{$description}</p>
  <p>{_texts.journal.chapters} {_texts.journal.basic} <a n:href="Journal:inventory">{_texts.journal.inventory}</a> <a n:href="Journal:pets">{_texts.journal.pets}</a> <a n:href="Journal:quests">{_texts.journal.quests}</a></p>
{/block}