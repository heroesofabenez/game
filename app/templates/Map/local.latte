{layout '../@layout.latte'}
{block title}{_texts.map.travelTitle}{/block}
{block content}
  <h1>{_texts.map.title}</h1>
  <image src="{$image|replace:$wwwDir:$basePath}" usemap="#local_map" alt="{_texts.map.localMap}">
  <map name="local_map">
  {foreach $areas as $area}
    <area href="{$area->href}" shape="{$area->shape}" coords="{$area->coords}" title="{$area->title}">
  {/foreach}
  </map>
{/block}