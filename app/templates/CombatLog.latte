<!DOCTYPE HTML>
<html>
<head>
  <meta charset="utf-8">
  <title>HeroesofAbenez - Combat</title>
</head>
<body>
<article id="main">
  <h1>Combat</h1>
  <div id="team1">
    <h3 class="teamName">{$team1->name}</h3>
    <div class="members">
      {foreach $team1 as $member}
      {$member->name}: level {$member->level}<br>
      {/foreach}
    </div>
  </div>
  <div id="team2">
    <h3 class="teamName">{$team2->name}</h3>
    <div class="members">
      {foreach $team2 as $member}
      {$member->name}: level {$member->level}<br>
      {/foreach}
    </div>
  </div>
  <br>
  <div id="combat">
    <h3>Battle</h3>
    {foreach $actions as $action}
    {$action}<br>
    {/foreach}
  </div>
</article>
</body>
</html>