{layout '../@layout.latte'}
{block title}Guild{/block}
{block content}
  <h1>Guild {$guild->name}</h1>
  Leader: {$guild->leader} Members: <a n:href="Guild:members">{$guild->members}</a><br>
  Description: {$guild->description}<br>
  {if $canManage}<a n:href="Guild:manage">Manage guild</a>{/if}
  {if $canInvite}<a n:href="Guild:applications">Applications</a>{/if}
  <a n:href="Tavern:guild">Chat</a>
{/block}