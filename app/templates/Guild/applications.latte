{layout '../@layout.latte'}
{block title}Guild applications{/block}
{block content}
  <h1>Guild applications</h1>
  {if count($apps) == 0}
  <p>No unresolved applications</p>
  {else}
  {foreach $apps as $app}
  <p>{$app->from} ({$app->sent}) wants to join your guild.<br>
  <a n:href="Request:accept $app->id">Accept</a> <a n:href="Request:decline $app->id">Decline</a></p>
  {/foreach}
  {/if}
{/block}