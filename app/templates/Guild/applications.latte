{layout "../@layout.latte"}
{block title}{_texts.guild.applicationsTitle}{/block}
{block content}
  <h1>{_texts.guild.applicationsTitle}</h1>
  {if count($apps) == 0}
  <p>{_texts.guild.noApplications}</p>
  {else}
  {foreach $apps as $app}
  <p>{$app->from} ({$app->sent}) {_texts.guild.wantToJoin}<br>
  <a n:href="Request:accept $app->id">{_texts.request.accept}</a> <a n:href="Request:decline $app->id">{_texts.request.decline}</a></p>
  {/foreach}
  {/if}
{/block}