{
    "name": "heroesofabenez/game",
    "description": "Work in progress online game Heroes of Abenez. Written in PHP 7, built on Nette Framework.",
    "homepage": "http://heroesofabenez.tk/",
    "license": "proprietary",
    "type": "project",
    "authors": [
        {
            "name": "Jakub Konečný",
            "email": "jakub.konecny2@centrum.cz",
            "role": "Lead Developer"
        }
    ],
    "require": {
        "php": ">=7.4.0",
        "ext-curl": "*",
        "ext-spl": "*",
        "nette/application": "^3.0.7",
        "nette/bootstrap": "^3.0",
        "nette/caching": "^3.0.1",
        "nette/di": "^3.0.5",
        "nette/forms": "^3.0.7",
        "nette/security": "^3.0.5",
        "nette/utils": "^3.1.3",
        "tracy/tracy": "^2.7.6",
        "latte/latte": "^2.8.3",
        "nexendrie/translation": "^2.3.1",
        "nexendrie/menu": "^2.4",
        "nexendrie/utils": "^1.8",
        "nextras/orm": "^3.1",
        "symfony/options-resolver": "^5.0",
        "heroesofabenez/chat": "^2.1",
        "heroesofabenez/combat": "^1.0"
    },
    "require-dev": {
        "nexendrie/code-quality": "dev-master",
        "phpstan/phpstan-nette": "^0.12"
    },
    "replace": {
        "symfony/polyfill-php73": "*",
        "symfony/polyfill-mbstring": "*"
    },
    "autoload": {
        "psr-4": {
            "HeroesofAbenez\\": [
                "app/"
            ]
        },
        "classmap": ["app/Model/exceptions.php"]
    },
    "autoload-dev": {
        "psr-4": {
            "HeroesofAbenez\\": [
                "tests/HeroesofAbenez/"
            ]
        }
    },
    "config": {
        "classmap-authoritative": true
    },
    "scripts": {
        "post-update-cmd": [
          "php -r \"copy('vendor/nette/forms/src/assets/netteForms.js', 'www/js/netteForms.js');\""
        ]
    },
    "minimum-stability": "dev",
    "prefer-stable": true
}
